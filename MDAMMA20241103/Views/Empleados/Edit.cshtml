@model MDAMMA20241103.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Editar</h1>
    <h4>Empleado</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label">Apellido</label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FechaContratacion" class="control-label">Fecha Contratación</label>
                    <input asp-for="FechaContratacion" type="date" class="form-control" />
                    <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Salario" class="control-label">Salario</label>
                    <input asp-for="Salario" class="form-control" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                @await Html.PartialAsync("_DetalleEmpleados", Model.DetalleEmpleados)
            </div>

            <div class="col-12 d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Modificar" class="btn btn-primary" />
                </div>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>

    <div class="text-end mt-3">
        <a asp-action="Index">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
