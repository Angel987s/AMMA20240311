@model MDAMMA20241103.Models.Empleado

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Detalles</h1>

    <div>
        <h4>Empleado</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaContratacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaContratacion)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Salario)
            </dd>
        </dl>

        <div class="row row-cols-md-12">
            @await Html.PartialAsync("_DetalleEmpleados", Model.DetalleEmpleados)
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>
